        headerfiles="../TrigSteeringEvent/TrigSteeringEventDict.h" \
        dataLinks="TrigRoiDescriptor TrigSuperRoi"


apply_pattern sercnv typesWithNamespace="LVL1::RecJetRoI LVL1::RecJetEtRoI LVL1::RecEmTauRoI LVL1::RecEnergyRoI LVL1::RecMuonRoI " \
