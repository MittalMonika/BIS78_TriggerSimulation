G4INSTALL	=	${ATLAS_EXTERNAL}/geant4/${G4VERSION}
G4SYSTEM	=	@G4SYSTEM@

##################################################################################

# G4 standard flags

G4GLOBAL	=	-I$(G4INSTALL)/source/global/management/include \
			-I$(G4INSTALL)/source/global/HEPRandom/include \
			-I$(G4INSTALL)/source/global/HEPGeometry/include \
			-I$(G4INSTALL)/source/global/HEPNumerics/include

G4RUN		=	-I$(G4INSTALL)/source/run/include

G4MATERIALS	=	-I$(G4INSTALL)/source/materials/include

G4PARTICLES	=	-I$(G4INSTALL)/source/particles/management/include \
			-I$(G4INSTALL)/source/particles/bosons/include \
			-I$(G4INSTALL)/source/particles/leptons/include \
			-I$(G4INSTALL)/source/particles/hadrons/barions/include \
			-I$(G4INSTALL)/source/particles/hadrons/ions/include \
			-I$(G4INSTALL)/source/particles/hadrons/mesons/include \
			-I$(G4INSTALL)/source/particles/shortlived/include

G4PROCESSES	=	-I$(G4INSTALL)/source/processes/management/include \
			-I$(G4INSTALL)/source/processes/decay/include \
			-I$(G4INSTALL)/source/processes/optical/include \
			-I$(G4INSTALL)/source/processes/transportation/include \
			-I$(G4INSTALL)/source/processes/parameterisation/include \
			-I$(G4INSTALL)/source/processes/electromagnetic/standard/include \
			-I$(G4INSTALL)/source/processes/electromagnetic/muons/include \
			-I$(G4INSTALL)/source/processes/electromagnetic/utils/include \
			-I$(G4INSTALL)/source/processes/electromagnetic/xrays/include \
			-I$(G4INSTALL)/source/processes/electromagnetic/lowenergy/include \
			-I$(G4INSTALL)/source/processes/hadronic/management/include \
			-I$(G4INSTALL)/source/processes/hadronic/processes/include \
			-I$(G4INSTALL)/source/processes/hadronic/util/include \
			-I$(G4INSTALL)/source/processes/hadronic/cross_sections/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/de_excitation/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/diffractive_string/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/high_energy/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/kinetic_model/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/management/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/pre_equilibrium/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/quark_gluon_string/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/string_common/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/string_fragmentation/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/generator/util/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/high_energy/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/low_energy/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/neutron_hp/include \
			-I$(G4INSTALL)/source/processes/hadronic/models/isotope_production/include \
			-I$(G4INSTALL)/source/processes/hadronic/stopping/include

G4GEOMETRY	=	-I$(G4INSTALL)/source/geometry/management/include \
			-I$(G4INSTALL)/source/geometry/solids/CSG/include \
			-I$(G4INSTALL)/source/geometry/solids/BREPS/include \
			-I$(G4INSTALL)/source/geometry/solids/Boolean/include \
			-I$(G4INSTALL)/source/geometry/solids/STEP/include \
			-I$(G4INSTALL)/source/geometry/solids/STEPinterface/include \
			-I$(G4INSTALL)/source/geometry/solids/specific/include \
			-I$(G4INSTALL)/source/geometry/volumes/include \
			-I$(G4INSTALL)/source/geometry/magneticfield/include

G4TRACK		=	-I$(G4INSTALL)/source/track/include

G4TRACKING	=	-I$(G4INSTALL)/source/tracking/include

G4DIGITS_HITS	=	-I$(G4INSTALL)/source/digits+hits/detector/include \
			-I$(G4INSTALL)/source/digits+hits/hits/include \
			-I$(G4INSTALL)/source/digits+hits/digits/include

G4READOUT	=	-I$(G4INSTALL)/source/readout/include

G4EVENT		=	-I$(G4INSTALL)/source/event/include

G4GRAPHICS_REPS	=	-I$(G4INSTALL)/source/graphics_reps/include

G4INTERCOMS	=	-I$(G4INSTALL)/source/intercoms/include

G4STLINC	=	-I$(G4INSTALL)/source/global/STLInterface

G4FLAGS		= 	$(G4GLOBAL) $(G4RUN) $(G4MATERIALS) $(G4PARTICLES) \
			$(G4PROCESSES) $(G4GEOMETRY) $(G4TRACK) $(G4TRACKING) \
			$(G4DIGITS_HITS) $(G4READOUT) $(G4EVENT) \
			$(G4GRAPHICS_REPS) $(G4INTERCOMS) $(G4STLINC)

##################################################################################

# G4 visualisation flags

G4VISFLAGS	=	-DG4VIS_USE \
			-I$(G4INSTALL)/source/visualization/management/include \
			-I$(G4INSTALL)/source/visualization/modeling/include

G4DAWNFLAGS	=	-DG4VIS_USE_DAWN \
			-I$(G4INSTALL)/source/visualization/FukuiRenderer/include

G4DAWNFILEFLAGS =	-DG4VIS_USE_DAWNFILE \
			-I$(G4INSTALL)/source/visualization/FukuiRenderer/include

# G4 user interface flags

G4UIFLAGS	=	-DG4UI_USE \
			-I$(G4INSTALL)/source/interfaces/intercoms/include \
			-I$(G4INSTALL)/source/interfaces/basic/include \
			-I$(G4INSTALL)/source/interfaces/common/include

# G4 Objy and HepODBMS flags

G4ODBMSFLAGS	=	-I$(G4INSTALL)/source/persistency/global/include \
			-I$(G4INSTALL)/source/persistency/digits+hits/hits/include \
			-I$(G4INSTALL)/source/persistency/digits+hits/digits/include \
			-I$(G4INSTALL)/source/persistency/events/include \
			-I$(G4INSTALL)/source/persistency/geometry/global/include \
			-I$(G4INSTALL)/source/persistency/geometry/solids/CSG/include \
			-I$(G4INSTALL)/source/persistency/geometry/solids/Boolean/include \
			-I$(G4INSTALL)/source/persistency/geometry/management/include \
			-I$(G4INSTALL)/source/persistency/management/include \
			-I$(G4INSTALL)/lib/$(G4SYSTEM)/schema/include

##################################################################################

# G4 libraries 

G4LIBS		=	$(shell $(G4INSTALL)/lib/$(G4SYSTEM)/liblist -d  $(top_builddir) < $(G4INSTALL)/lib/$(G4SYSTEM)/libname.map)

##################################################################################
