dnl Initialisation
AC_PREREQ(2.12)
AC_INIT(PACKAGE)
SRT_INIT

dnl Configure this package
SRT_CONFIG_LOCAL

AC_SUBST(G4VERSION)
: ${G4VERSION="geant4.3.0"}

AC_SUBST(G4SYSTEM)
case "$SRT_TARGET" in
  *-linux*/egcs-1.1 )	G4SYSTEM="Linux-g++" ;;
  *-linux*/gcc-2.95.2 ) G4SYSTEM="Linux-gcc-2.95.2" ;;
  *-solaris2.5* )	G4SYSTEM="SUN-CC" ;;
  *-solaris2.7* )	G4SYSTEM="SUN-CC5" ;;
esac

AC_SUBST(FLAGS)
case "$SRT_TARGET" in
  *-linux*      ) FLAGS="-DG4USE_STL -UCLHEP_MAX_MIN_DEFINED" ;;
  *-solaris2.7* ) FLAGS="-DG4USE_STL -DG4USE_STD_NAMESPACE -UCLHEP_MAX_MIN_DEFINED -UCLHEP_ABS_DEFINED" ;;
  *-solaris2.5* ) FLAGS="-DG4USE_STL -UCLHEP_MAX_MIN_DEFINED -UOS_NO_MIN_MAX -DG4USE_OSPACE -DG4NOT_ISO_DELETES" ;;
esac

AC_SUBST(EXTRAS)
case "$SRT_TARGET" in 
  *-solaris2.5* ) EXTRAS="ObjectSpace_ObjectSpace" ;;
esac

dnl Generate makefiles
SRT_OUTPUT(GNUmakefile)

