package AtlasMKL
author  Sebastien Binet

## for athena policies: this has to be the first use statement
use AtlasPolicy 	AtlasPolicy-*

use ExternalPolicy	ExternalPolicy-* External

macro AtlasMKL_native_version "2013.3.163"

macro AtlasMKL_composerxe_home "/no-intel-composerxe" \
      Linux  "${SITEROOT}/sw/IntelSoftware/linux/x86_64/xe2013/composer_xe_$(AtlasMKL_native_version)" 

macro AtlasMKL_home "/no-intel-mkl" \
      Linux  "$(AtlasMKL_composerxe_home)/mkl" 
macro AtlasMKL_compiler_home "/no-intel-compiler" \
      Linux "$(AtlasMKL_composerxe_home)/compiler"

# for kit building
macro AtlasMKL_export_paths "$(AtlasMKL_incdir) $(AtlasMKL_libdir) $(AtlasMKL_compiler_libdir)"
macro AtlasMKL_platform "" \
      Linux&64 "intel64" \
      Linux&32 "ia32"

macro AtlasMKL_bin "$(AtlasMKL_home)/bin/ia32" \
      64 "$(AtlasMKL_home)/bin/intel64"

macro AtlasMKL_incdir "" \
      Linux&64 "$(AtlasMKL_home)/include" \
      Linux&32 "$(AtlasMKL_home)/include"
include_dirs $(AtlasMKL_incdir)

macro AtlasMKL_libdir "" \
      Linux&64 "$(AtlasMKL_home)/lib/intel64" \
      Linux&32 "$(AtlasMKL_home)/lib/ia32"

macro AtlasMKL_compiler_libdir "" \
      Linux&32 "$(AtlasMKL_compiler_home)/lib/ia32" \
      Linux&64 "$(AtlasMKL_compiler_home)/lib/intel64"

set ATLASMKLLIBDIR $(AtlasMKL_libdir)
set ATLASMKLLIBDIR_PRELOAD $(AtlasMKL_compiler_libdir)


