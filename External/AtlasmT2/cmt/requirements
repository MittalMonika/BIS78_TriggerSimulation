package AtlasmT2
author C S Cowden  <cowden@hep.phy.cam.ac.uk>


use ExternalPolicy	ExternalPolicy-*	External
use AtlasExternalArea	AtlasExternalArea-*	External

macro AtlasmT2_native_version "1.0.0"

macro AtlasmT2_system_def "i686_slc4_gcc346"

macro AtlasmT2_system   "$(AtlasmT2_system_def)" \
        slc4&gcc345&    "i686-slc4-gcc346" \
        slc4&gcc345&64  "x86_64-slc4-gcc346" \
        slc4&gcc34&32   "i686-slc4-gcc346" \
        slc4&gcc34&64   "x86_64-slc4-gcc346" \
        slc4&gcc41&32   "i686-slc4-gcc432" \
        slc4&gcc41&64   "x86_64-slc4-gcc432"\
        slc4&gcc43&32   "i686-slc4-gcc432" \
        slc4&gcc43&64   "x86_64-slc4-gcc432" \
        slc5&gcc34&32   "i686-slc5-gcc346" \
        slc5&gcc43&32   "i686-slc5-gcc432" \
        slc5&gcc43&64   "x86_64-slc5-gcc432" \
        slc5&gcc46&64   "x86_64-slc5-gcc46" \
        slc6&gcc46&64   "x86_64-slc6-gcc46" \
        slc6&gcc47&32   "i686-slc6-gcc47" \
        slc6&gcc47&64   "x86_64-slc6-gcc47" \
        slc6&gcc48&64   "x86_64-slc6-gcc47" \
        target-darwin   "${CMTCONFIG}" 
        

macro AtlasmT2_base "$(ATLAS_EXTERNAL)/mT2/$(AtlasmT2_native_version)/mT2"
#macro AtlasmT2_base "/afs/cern.ch/atlas/offline/external/mT2/$(AtlasmT2_native_version)/mT2"

macro AtlasmT2_home "$(AtlasmT2_base)"
macro AtlasmT2_lib "$(AtlasmT2_home)/$(AtlasmT2_system)"
#macro AtlasmT2_linkopts "-L$(AtlasmT2_lib) -lMt2"
macro AtlasmT2_linkopts "-L$(AtlasmT2_lib) -loxbridgekinetics-1.0"
macro AtlasmT2_export_paths "$(AtlasmT2_home)/Mt2 $(AtlasmT2_lib)"

include_path none
include_dirs  $(AtlasmT2_home)
#macro AtlasmT2_include $(AtlasmT2_home)

apply_pattern declare_installed_libraries dir=$(AtlasmT2_lib)


