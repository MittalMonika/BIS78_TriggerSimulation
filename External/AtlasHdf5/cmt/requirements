macro_append AtlasHdf5_linkopts " -lhdf5_cpp -lhdf5"
macro_append AtlasHdf5_linkopts "" Darwin " -lz -lsz "

include_path none
apply_pattern include_path extras=$(CMTINSTALLAREA)/$(CMTCONFIG)/include

