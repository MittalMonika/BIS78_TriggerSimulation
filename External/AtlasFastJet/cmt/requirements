package AtlasFastJet

author  Alexander Richards <richards@hep.ucl.ac.uk>

use AtlasExternalArea AtlasExternalArea-00-* External
use AtlasFortranPolicy AtlasFortranPolicy-*
use fastjet * LCG_Interfaces


macro AtlasFastJet_native_version "$(fastjet_native_version)"
macro AtlasFastJet_home           "$(fastjet_home)"

macro AtlasFastJet_dir "$(AtlasFastJet_home)"
macro AtlasFastJet_lib "$(AtlasFastJet_dir)/lib"

macro AtlasFastJet_prepend  "" \
      notAsNeeded           "" \
      asNeeded              " $(notAsNeeded_linkopt)"
macro AtlasFastJet_postpend "" \
      notAsNeeded           "" \
      asNeeded              " $(asNeeded_linkopt)"

macro AtlasFastJet_linkopts "-L$(AtlasFastJet_lib) $(AtlasFastJet_prepend) -lfastjet -lfastjetplugins -lfastjettools -lsiscone -lsiscone_spherical $(AtlasFastJet_postpend)"

macro AtlasFastJet_export_paths "$(AtlasFastJet_dir)"
macro AtlasFastJet_include "$(AtlasFastJet_dir)/include"

# set environment variable :
set FASTJETPATH "$(AtlasFastJet_dir)"

include_path none
include_dirs "$(AtlasFastJet_include)"

private
apply_pattern declare_installed_libraries dir=$(AtlasFastJet_lib)
