public

## declare the directories CMT should know about
branches python share src

apply_pattern dual_use_library files= " *.cxx "
apply_pattern declare_joboptions files=" *.py"
apply_pattern declare_python_modules files="*.py"

# need ROOT xml
private
apply_pattern cmake_add_command command="find_package(ROOT COMPONENTS XMLIO XMLParser)"
apply_pattern cmake_add_command command="find_package(xml)"

macro_append DerivationFrameworkTriggerLib_cppflags " `xml2-config --cflags`"
macro_append DerivationFrameworkTriggerLib_use_linkopts " -L$(ROOTSYS)/lib -lXMLIO -lXMLParser"
macro_append DerivationFrameworkTriggerLib_use_linkopts " -lxml2" slc4-gcc34 " /usr/lib/libxml2.so.2"