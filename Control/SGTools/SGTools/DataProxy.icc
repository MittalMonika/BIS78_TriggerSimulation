/// Test to see if a given string is in the alias set.
inline
bool SG::DataProxy::hasAlias(const std::string& key) const
{
  lock_t lock (m_mutex);
  const AliasCont_t& alias = m_tAddress->alias();
  return alias.find(key) != alias.end();
}


