# --- Set the environment variables need by the package VP1Algs ---
# rbianchi@cern.ch - Nov 2016, Feb 2018

# Set the environment variables


set( VP1ALGSENVIRONMENT_ENVIRONMENT  
    FORCESET VP1PLUGINPATH \${@CMAKE_PROJECT_NAME@_DIR}/lib
    )

# Silently declare the module found
set( VP1ALGSENVIRONMENT_FOUND TRUE )

# Set paths from LCG packages in runtime env, explicitely
find_package( libxkbcommon )
find_package( glib )
if( LIBXKBCOMMON_FOUND )
    message("'libxkbcommon' found, adding its library path to the 'LD_LIBRARY_PATH' (See: https://its.cern.ch/jira/browse/ATLINFR-2218)")
    message("LIBXKBCOMMON_LIBRARY_DIRS: " ${LIBXKBCOMMON_LIBRARY_DIRS})
    set( VP1ALGSENVIRONMENT_ENVIRONMENT
        PREPEND LD_LIBRARY_PATH LIBXKBCOMMON_LIBRARY_DIRS )
endif()
if( GLIB_FOUND )
    message("'glib' found, adding its library path to the 'LD_LIBRARY_PATH' (See: https://its.cern.ch/jira/browse/ATLINFR-2218)")
    message("GLIB_LIBRARY_DIRS: " ${GLIB_LIBRARY_DIR_LIBRARY_DIRS})
    set( VP1ALGSENVIRONMENT_ENVIRONMENT
        PREPEND LD_LIBRARY_PATH GLIB_LIBRARY_DIRS )
endif()



