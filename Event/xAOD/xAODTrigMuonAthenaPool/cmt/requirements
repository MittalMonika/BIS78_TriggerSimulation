                                          xAOD::L2StandAloneMuonAuxContainer" \
                      files="-s=${xAODTrigMuon_root}/xAODTrigMuon \
                             L2StandAloneMuonContainer.h \
                             L2StandAloneMuonAuxContainer.h" \
                      cnv_pfx="xAOD"
