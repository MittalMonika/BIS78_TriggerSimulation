package HLTtdaqcommon

author Reiner.Hauser@cern.ch

use TDAQCPolicy        *

use AtlasPolicy        AtlasPolicy-*
use AtlasBoost         AtlasBoost-*             External 

set TDAQC_INST_PATH $(TDAQCPolicyExt_cmtpath)/installed

macro_append pp_cppflags ' -DTDAQ_PACKAGE_NAME=\"$(package)\" '
macro_append pp_cflags   ' -DTDAQ_PACKAGE_NAME=\"$(package)\" '
macro_append pp_cppflags " -DDEBUG_LEVEL=0 " \
             	           debug " -DDEBUG_LEVEL=3 "

path TDAQ_PYTHON_HOME $(PYTHON_HOME)/$(LCG_system)
path_remove  PATH "$(TDAQC_INST_PATH)/share/bin"
path_prepend PATH "$(TDAQC_INST_PATH)/share/bin"

macro HLTtdaqcommon_linkopts "$(tdaqc_linkopts)"

include_dirs $(TDAQC_INST_PATH)/$(CMTCONFIG)/include $(TDAQC_INST_PATH)/include

apply_tag notAsNeeded

